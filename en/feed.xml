---
layout: none
title: English RSS Feed
locale: en_GB
sitemap:
  changefreq: #always hourly daily weekly monthly yearly never
  exclude: 'yes' #or 'no'
  priority: #between 0.0 to 1.0, 1.0 high priority
  lastmod: # date to end modification
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
  xmlns:wfw="http://wellformedweb.org/CommentAPI/"
  xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
  xmlns:media="http://search.yahoo.com/mrss/" 
>
  <channel>
  {%- assign translate = site.data.locales.translate %}
    <title>{{ site.name | xml_escape }}</title>
    <description>{%- if site.description %}{{ translate.site.description[page.locale] | xml_escape }}{%- endif %}</description>
    <sy:updatePeriod>{{ site.feed_update_period | default: 'daily' | xml_escape }}</sy:updatePeriod>
    <sy:updateFrequency>{{ site.feed_update_frequency | default: 1 | xml_escape }}</sy:updateFrequency>
    <link>{{ site.url }}{{ site.baseurl }}/{{ page.locale | slice: 0,2 }}/</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/{{ page.path }}" rel="self" type="application/rss+xml" />
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{%- for post in site.posts limit:1 %}{{ post.date | date_to_rfc822 }}{%- endfor %}</lastBuildDate>
    <image>
        <url>{{ site.url }}{{ site.baseurl }}/assets/images/favicon.png</url>
        <title>{{ site.title | xml_escape }}</title>
          <link>{{ site.url }}{{ site.baseurl }}/{{ page.locale | slice: 0,2 }}/</link>
          <width>32</width>
            <height>32</height>
    </image>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {%- assign posts = site.posts | where: 'locale', page.locale %}
    {%- for post in posts limit: 10 %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      {%- assign author = site.data.authors[post.author] %}
      {%- if post.author %}
      <dc:creator><![CDATA[{{ post.author | xml_escape }}]]</dc:creator>
      {%- endif %}
      {%- if post.description %}
      <description>
      <![CDATA[
      <p>{{ post.description | xml_escape }}</p>
      {%- if post.image contains "://" %}{{ post.image }}{%- else %}{%- picture feed posts/{{ post.guid }}/{{ post.image }} --alt {{ post.title }} --img width="600" height="338" %}{%- endif %}
      <p>{{ post.excerpt | strip_html | truncatewords: 50, " [...]" }}</p>
      <p>Read the full article: <a href="{{ post.url | absolute_url }}">{{ post.title }}</a> on the blog <a href="{{site.url}}{{ site.baseurl }}/{{ page.locale | slice: 0,2 }}/">{{ site.title }}</a>.</p>
      ]]>
      </description>
      {%- elsif post.excerpt %}
      <description><![CDATA[
      {%- if post.image contains "://" %}{{ post.image }}{%- else %}{%- picture feed posts/{{ post.guid }}/{{ post.image }} --alt {{ post.title }} --img width="600" height="338" %}{%- endif %}
      <p>{{ post.excerpt | strip_html | truncatewords: 50, " [...]" }}</p>
      <p>Read the full article: <a href="{{ post.url | absolute_url }}">{{ post.title }}</a> on the blog <a href="{{site.url}}{{ site.baseurl }}/{{ page.locale | slice: 0,2 }}/">{{ site.title }}</a>.</p>
      ]]>
      </description>
      {%- endif %}
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <link>{{ site.url }}{{ post.url }}</link>
      <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
      {%- for tag in post.tags %}
      <category><![CDATA[{{ tag | xml_escape }}]]</category>
      {%- endfor %}
      {%- for cat in post.categories %}
      <category><![CDATA[{{ cat | xml_escape }}]]</category>
      {%- endfor %}
    </item>
    {%- endfor %}
  </channel>
</rss>
